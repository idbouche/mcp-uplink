{
    "name": "mcp-uplink",
    "version": "0.2.1",
    "description": "Secure bridge CLI for MCP uplink - Connect local AI clients to remote MCP infrastructure",
    "main": "dist/index.js",
    "bin": {
        "mcp-uplink": "dist/bin/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "bundle": "esbuild src/bin/cli.ts --bundle --platform=node --target=node18 --outfile=dist/bin/cli.js --format=cjs --external:@modelcontextprotocol/sdk",
        "start": "node dist/bin/cli.js",
        "dev": "ts-node src/bin/cli.ts",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts",
        "audit": "npm audit",
        "prepublishOnly": "npm run test && npm run build"
    },
    "keywords": [
        "mcp",
        "ai",
        "bridge",
        "proxy",
        "claude",
        "cursor",
        "llm"
    ],
    "author": "Id Bouche Mohammed",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.1",
        "commander": "^12.1.0",
        "dotenv": "^16.4.5",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^20.14.2",
        "@typescript-eslint/eslint-plugin": "^7.13.0",
        "@typescript-eslint/parser": "^7.13.0",
        "esbuild": "^0.24.0",
        "eslint": "^8.57.0",
        "prettier": "^3.3.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "vitest": "^4.0.14"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idbouche/mcp-uplink.git"
    },
    "bugs": {
        "url": "https://github.com/idbouche/mcp-uplink/issues"
    },
    "homepage": "https://github.com/idbouche/mcp-uplink#readme"
}